            div.flex-1.flex.flex-col
                nav.bg-slate-800.text-gray-100.flex.justify-between.items-center.px-4.py-2
                    block navbar
                        include ../templates/navbar.pug

                main.flex-1.px-4.py-4.overflow-y-auto
                    block contenido